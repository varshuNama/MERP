<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightyellow"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:weightSum="1.3" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/zerodp"
            android:layout_marginLeft="@dimen/twentydp"
            android:layout_marginTop="@dimen/tendp"
            android:layout_weight="0.1"
            android:text="@string/office"
            android:textColor="@color/blackcolor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twentydp"
            android:layout_weight="0.1"
            android:orientation="horizontal" >

            <RadioGroup
                android:id="@+id/radioGroupOfficeType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rd_headoff"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@android:drawable/btn_radio"
                    android:drawablePadding="4dp"
                    android:text="@string/headoffice"
                    android:textColor="@color/textcomman_color"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rd_onproject"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@android:drawable/btn_radio"
                    android:drawablePadding="4dp"
                    android:text="@string/projectlocation"
                    android:textColor="@color/textcomman_color"
                    android:textSize="12sp" />
            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/input_stroke_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10sp"
            android:layout_weight="0.1"
            android:text="@string/leavetype"
            android:textColor="@color/textcomman_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/twentydp"
            android:layout_weight="0.1"
            android:gravity="left"
            android:orientation="horizontal" >

            <RadioGroup
                android:id="@+id/radioGroupLeaveType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rd_fullday"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@android:drawable/btn_radio"
                    android:drawablePadding="4dp"
                    android:text="@string/fullday"
                    android:textColor="@color/textcomman_color"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rd_halfday"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@android:drawable/btn_radio"
                    android:drawablePadding="4dp"
                    android:text="@string/halfday"
                    android:textColor="@color/textcomman_color"
                    android:textSize="12sp" />
            </RadioGroup>
        </LinearLayout>

        <View
            android:id="@+id/viewhalf"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/input_stroke_color" />

        <TextView
            android:id="@+id/texthalf"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10sp"
            android:layout_weight="0.1"
            android:text="@string/halfday"
            android:textColor="@color/textcomman_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearhalf"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.1"
            android:gravity="left"
            android:orientation="horizontal" >

            <RadioGroup
                android:id="@+id/radioGroupHalfDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rd_firsthalf"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@android:drawable/btn_radio"
                    android:drawablePadding="4dp"
                    android:text="@string/first_half"
                    android:textColor="@color/textcomman_color"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rd_secondhalf"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@android:drawable/btn_radio"
                    android:drawablePadding="4dp"
                    android:text="@string/second_half"
                    android:textColor="@color/textcomman_color"
                    android:textSize="12sp" />
            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/input_stroke_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10sp"
            android:layout_weight="0.1"
            android:singleLine="true"
            android:text="@string/leavefrom"
            android:textColor="@color/textcomman_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dateFrom"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.1"
            android:background="@drawable/bg_input"
            android:ems="10"
            android:focusable="false"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:textColor="@color/blackcolor" />

        <View
            android:id="@+id/viewleaveto"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="8sp"
            android:background="@color/input_stroke_color" />

        <TextView
            android:id="@+id/leaveToText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10sp"
            android:layout_weight="0.1"
            android:text="@string/leaveto"
            android:textColor="@color/blackcolor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dateTo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.1"
            android:background="@drawable/bg_input"
            android:ems="10"
            android:focusable="false"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:textColor="@color/blackcolor" >
        </EditText>

        <View
            android:id="@+id/leaveToLine"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="8sp"
            android:background="@color/input_stroke_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10sp"
            android:layout_weight="0.1"
            android:text="@string/reason"
            android:textColor="@color/blackcolor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/reason"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.1"
            android:background="@drawable/bg_input"
            android:ems="10"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:textColor="@color/blackcolor"
            android:textStyle="bold" >
        </EditText>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="8sp"
            android:background="@color/input_stroke_color" />

        <Button
            android:id="@+id/proceed"
            style="@style/submit_brown_button"
            android:layout_gravity="center"
            android:text="@string/submit"
            android:layout_marginTop="10dp"
            android:textColor="@color/textcomman_color" />
    </LinearLayout>

</ScrollView>