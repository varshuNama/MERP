<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightyellow"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout style="@style/header_linear" >

        <LinearLayout
            android:id="@+id/linearback"
            style="@style/back_button_image" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha" />
        </LinearLayout>

        <TextView
            android:id="@+id/lblListHeader"
            style="@style/header_textView"
            android:text="@string/approve_leave" />

        <LinearLayout
            android:id="@+id/submitBtn"
            style="@style/linear_submit_button"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineargetleave"
        style="@style/second_header_linear"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".5"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            style="@style/second_header_linear_text" >

            <TextView
                android:id="@+id/name"
                style="@style/second_header_text"
                android:text="@string/name" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            style="@style/second_header_linear_text" >

            <TextView
                android:id="@+id/project"
                style="@style/second_header_text"
                android:text="@string/project" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear4"
            style="@style/second_header_linear_text" >

            <TextView
                android:id="@+id/circle"
                style="@style/second_header_text"
                android:text="@string/circle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear5"
             android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/reason"
                style="@style/second_header_text"
                android:text="@string/reason" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear6"
            style="@style/second_header_linear_text" >

            <TextView
                android:id="@+id/leavefrom"
                style="@style/second_header_text"
                android:text="@string/leave_from" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear7"
            style="@style/second_header_linear_text" >

            <TextView
                android:id="@+id/leaveto"
                style="@style/second_header_text"
                android:text="@string/leave_to" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear8"
            style="@style/second_header_linear_text" >

            <TextView
                android:id="@+id/type"
                style="@style/second_header_text"
                android:text="@string/type" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear9"
           android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"  >
        </LinearLayout>
    </LinearLayout>
<View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#000000" />
    <ListView
        android:id="@+id/approvelistView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:visibility="gone" >
    </ListView>

    <TextView
        android:id="@+id/approvetextleave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_weight="0.9"
        android:text="@string/textview"
        android:visibility="gone" >
    </TextView>

</LinearLayout>