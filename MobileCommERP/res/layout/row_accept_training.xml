<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:gravity="center" />

    <TextView
        android:id="@+id/accepttrainingname"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/training_name"
        android:textColor="@color/textcomman_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/accepttraininglocation"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/training_location"
        android:textColor="@color/textcomman_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/accepttraining_duration"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/training_duration"
        android:textColor="@color/textcomman_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/accepttrainin_travel_start_time"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/travel_start"
        android:textColor="@color/textcomman_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/accepttrainin_travel_end_time"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/travel_end"
        android:textColor="@color/textcomman_color"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp"
        android:textColor="@color/textcomman_color" >

        <RadioGroup
            android:id="@+id/radioGrouptrainingApproveReject"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="gravity" >

            <RadioButton
                android:id="@+id/rd_traniningapprove"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@android:drawable/btn_radio"
                android:drawablePadding="4dp"
                android:text="Yes"
                android:textColor="@color/textcomman_color"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rd_trainingreject"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@android:drawable/btn_radio"
                android:drawablePadding="4dp"
                android:text="No"
                android:textColor="@color/textcomman_color"
                android:textSize="12sp" />
        </RadioGroup>
    </LinearLayout>

    <EditText
        android:id="@+id/training_remarks_detail"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="Remarks"
        android:inputType="text"
        android:maxLength="100"
        android:textColor="@color/textcomman_color"
        android:textSize="12sp" />

</LinearLayout>