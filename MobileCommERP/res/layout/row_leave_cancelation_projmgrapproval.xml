<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/LeaveCancelation_ProjMgrApprova_checkBox1"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:gravity="center" />

    <TextView
        android:id="@+id/LeaveCancelation_ProjMgrApprova_emp_name"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/emp_name"
        android:textColor="@color/textcomman_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/LeaveCancelation_ProjMgrApprova_emp_email"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/emp_email"
        android:textColor="@color/textcomman_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/LeaveCancelation_ProjMgrApprova_project_name"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/project_name"
        android:textColor="@color/textcomman_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/LeaveCancelation_ProjMgrApprova_leave_date"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/leave_date"
        android:textColor="@color/textcomman_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/LeaveCancelation_ProjMgrApprova_leave_day"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/leave_day"
        android:textColor="@color/textcomman_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/LeaveCancelation_ProjMgrApprova_cancelremark"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/cancelremark"
        android:textColor="@color/textcomman_color"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp"
        android:textColor="@color/textcomman_color" >

        <RadioGroup
            android:id="@+id/LeaveCancelation_ProjMgrApprova_ApproveReject"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="gravity" >

            <RadioButton
                android:id="@+id/LeaveCancelation_ProjMgrApprova_approve"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@android:drawable/btn_radio"
                android:drawablePadding="4dp"
                android:text="Yes"
                android:textColor="@color/textcomman_color"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/LeaveCancelation_ProjMgrApprova_reject"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@android:drawable/btn_radio"
                android:drawablePadding="4dp"
                android:text="No"
                android:textColor="@color/textcomman_color"
                android:textSize="12sp" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>