<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightyellow"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout style="@style/header_linear" >

        <LinearLayout
            android:id="@+id/linearback"
            style="@style/back_button_image" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha" />
        </LinearLayout>

        <TextView
            android:id="@+id/lblListHeader"
            style="@style/header_textView"
            android:text="@string/leave_report" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.17"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/for_the_year"
            android:textColor="@color/textcomman_color" />

        <Spinner
            android:id="@+id/spinnerYear"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/spinselector"
            android:spinnerMode="dropdown"
            android:spinnerStyle="@android:style/Widget.Spinner.DropDown" />

        <Button
            android:id="@+id/getbtn"
            style="@style/submit_brown_button"
            android:layout_marginLeft="10dp"
            android:text="Get" />
    </LinearLayout>

    <View
        android:id="@+id/viewleaveto"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/blackcolor" />

    <TextView
        android:id="@+id/textrecordnofound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="jbdjadjab"
        android:visibility="gone" >
    </TextView>

    <LinearLayout
        android:id="@+id/reportheader"
        style="@style/second_header_linear" >

        <LinearLayout
            android:id="@+id/linear1"
            style="@style/second_header_linear_text" >

            <TextView
                android:id="@+id/monthyear"
                style="@style/second_header_text"
                android:text="@string/month_year" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            style="@style/second_header_linear_text" >

            <TextView
                android:id="@+id/earnedleave"
                style="@style/second_header_text"
                android:text="@string/earned_leave" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            style="@style/second_header_linear_text" >

            <TextView
                android:id="@+id/carryforward"
                style="@style/second_header_text"
                android:text="@string/carry_forward" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear4"
            style="@style/second_header_linear_text" >

            <TextView
                android:id="@+id/leavehand"
                style="@style/second_header_text"
                android:text="@string/leave_in_hand" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear5"
            style="@style/second_header_linear_text" >

            <TextView
                android:id="@+id/leavetaken"
                style="@style/second_header_text"
                android:text="@string/leave_taken" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear6"
            style="@style/second_header_linear_text" >

            <TextView
                android:id="@+id/pendingrequest"
                style="@style/second_header_text"
                android:text="@string/pending_request" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear7"
            style="@style/second_header_linear_text" >

            <TextView
                android:id="@+id/Forward"
                style="@style/second_header_text"
                android:text="@string/forward" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/listViewReport"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6" >
    </ListView>

</LinearLayout>