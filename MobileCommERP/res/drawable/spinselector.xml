<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="@color/lightyellow"
                        android:endColor="@color/lightyellow"
                        android:angle="270" />
                    <stroke
                        android:width="1dp"
                        android:color="#000000" />
                    <corners
                        android:radius="1dp" />
                    <padding
                        android:left="1dp"
                        android:top="1dp"
                        android:right="1dp"
                        android:bottom="1dp" />
                </shape>
            </item>
            <item
                android:top="2dp"
                android:right="5dp">
                <bitmap android:src="@drawable/arrow"
                        android:gravity="right|center" />
            </item>
        </layer-list>
    </item>
</selector>

